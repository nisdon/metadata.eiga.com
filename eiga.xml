<?xml version="1.0" encoding="UTF-8"?>
<scraper framework="1.1" date="2022.2.27" name="eiga.com" content="movies" language="ja">

<NfoUrl dest="4">
  <RegExp input="$$1" output="\1" dest="4">
	<expression></expression>
  </RegExp>
</NfoUrl>

<CreateSearchUrl clearbuffers="no" dest="4">
  <RegExp input="$$1" output="&lt;url&gt;https://eiga.com/search/\1/movie/&lt;/url&gt;" dest="4">
    <expression></expression>
  </RegExp>       
</CreateSearchUrl>

<GetSearchResults clearbuffers="no" dest="8">
  <RegExp input="$$6" output="&lt;?xml version=&quot;1.02&quot; encoding=&quot;UTF-8&quot; standalone=&quot;yes&quot;?&gt;&lt;results&gt;\1&lt;/results&gt;" dest="8">
    <RegExp input="$$1" output="&lt;entity&gt;&lt;title&gt;\2&lt;/title&gt;&lt;url&gt;https://eiga.com/movie/\1/&lt;/url&gt;&lt;url&gt;https://eiga.com/movie/\1/photo/&lt;/url&gt;&lt;url&gt;https://api.themoviedb.org/3/search/movie?api_key=f090bb54758cabf231fb605d3e3e0468&amp;query=\2;&amp;language=ja&lt;/url&gt;&lt;/entity&gt;" dest="6">
      <expression repeat="yes" noclean="1">&lt;a href=&quot;/movie/([0-9]*?)/&quot;&gt;.*?&quot;title&quot;&gt;(.*?)&lt;</expression>
    </RegExp>
    <expression noclean="1"></expression>
  </RegExp>
</GetSearchResults>

<GetDetails dest="5">
  <RegExp input="$$8" output="&lt;details&gt;\1&lt;/details&gt;" dest="5">
    <RegExp input="$$1" output="&lt;title&gt;\1&lt;/title&gt;" dest="8">
	  <expression>&lt;title&gt;(.*?):</expression>
    </RegExp>

	<RegExp input="$$1" output="&lt;originaltitle&gt;\1&lt;/originaltitle&gt;" dest="8+">
	  <expression>&gt;原題：(.*?)&lt;</expression>
    </RegExp>
	
    <RegExp input="$$1" output="&lt;year&gt;\1&lt;/year&gt;&lt;runtime&gt;\2&lt;/runtime&gt;" dest="8+">
	  <expression>&quot;data&quot;&gt;([0-9]*?)年製作／([0-9]*?)分</expression>
    </RegExp>

    <RegExp input="$$7" output="&lt;country&gt;\1&lt;/country&gt;" dest="8+">
      <RegExp input="$$1" output="\1・" dest="7">
		<expression noclearn="7">&quot;data&quot;&gt;.*?([^／]*?)[&lt;|合]</expression>
      </RegExp>
      <expression repeat="yes">(.+)・</expression>
    </RegExp>

    <RegExp input="$$1" output="&lt;director&gt;\1&lt;/director&gt;" dest="8+">
	  <expression>itemprop=&quot;director&quot;.*?name&quot;&gt;(.*?)&lt;</expression>
    </RegExp>

    <RegExp input="$$2" output="&lt;thumb&gt;\1&lt;/thumb&gt;" dest="8+">
      <expression>data-src=&quot;(.*?)\?</expression>
    </RegExp>

    <RegExp input="$$1" output="&lt;actor&gt;&lt;name&gt;\1&lt;/name&gt;&lt;thumb&gt;\2&lt;/thumb&gt;&lt;/actor&gt;" dest="8+">
        <expression repeat="yes">itemprop=&quot;actor&quot;.*?alt=&quot;(.*?)&quot;.*?data-src=&quot;(.*?)\?</expression>
    </RegExp>

    <RegExp input="$$1" output="&lt;plot&gt;\1&lt;/plot&gt;" dest="8+">
      <expression trim="yes">itemprop=&quot;description&quot;&gt;(.*?)&lt;</expression>
    </RegExp>

    <RegExp input="$$1" output="&lt;ratings&gt;&lt;rating max=&quot;5&quot;&gt;&lt;value&gt;\1&lt;/value&gt;&lt;/rating&gt;&lt;/ratings&gt;" dest="8+">
      <expression>itemprop=&quot;ratingValue&quot;&gt;(.*?)&lt;</expression>
    </RegExp>

    <RegExp input="$$7" output="&lt;chain function=&quot;GetTMDBGenresByIdChain&quot;&gt;$$7::ja&lt;/chain&gt;" dest="8+">
      <RegExp input="$$3" output="\1" dest="7">
		<expression noclean="3">&quot;id&quot;:([0-9]+)</expression>
      </RegExp>
	  <expression></expression>
    </RegExp>

	<expression noclean="1"/>
  </RegExp>
</GetDetails>

</scraper>
